
language en_US.UTF-8

set nowrapscan
set hlsearch

set autoindent
set tabstop=4
set shiftwidth=4

set laststatus=2
set showcmd

set cindent
set backspace=indent,eol,start

" Search .vimrc and so on in the current directory
set exrc

filetype on
filetype indent on
filetype plugin on

syntax on
highlight Comment ctermfg=blue guifg=blue

